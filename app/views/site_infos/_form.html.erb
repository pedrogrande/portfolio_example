<%= simple_form_for(@site_info) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :brand_name %>
    <%= f.input :welcome_message %>
    <%= f.input :page_title %>
    <%= f.input :call_to_action %>
  </div>

  <div class="form-actions">
    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>
